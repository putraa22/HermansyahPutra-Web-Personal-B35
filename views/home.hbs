<!-- Project start -->
    <section id="project">
      <div class=" container mt-5 m-auto" style="max-width: 100%; background-color: #fff;">
          <div class=" row text-center pt-4">
            <div class=" col">
              <h2 style="font-weight: bold;">MY PROJECT</h2>
            </div>
          </div>
        <div class="row d-flex justify-content-start mt-4 offset-1 " id="thumb">

          {{#each projects}}
            <div class="col-4 mb-4 " >
              <div class="card" id="projectCard" style="width: 18rem;" >
                <img 
                    src={{this.image}} 
                    class="card-img-top p-2" alt="...">
                <div class="card-body">
                  <a href="/detail/{{this.id}}" target="_blank" style="text-decoration: none; color: #000;">
                    <h5 class="card-title">{{this.title}}</h5> 
                    <p id="durasi" class="card-subtitle text-muted" style="font-size: 12px;">
                        Waktu pengerjaan : {{duration}}
                    </p>
                    <p class="card-text" style="text-indent: 13px; text-align:justify;">
                      {{this.conten}}
                    </p>

                    <div class="pt-2 pb-2 me-auto" id="material">
                      {{#each this.checkbox}}
                        <i class="{{this}}"></i>
                      {{/each}}
                    </div>

                    <div class="d-flex justify-content-between">
                          {{#if this.isLogin}}
                        <a 
                            href="/edit/{{this.id}}"
                            class="btn btn-secondary btn-sm flex-grow-1 me-3 " 
                            style="border-radius: 16px; font-size: 12px;">
                            Edit
                        </a>
                        <a 
                            href="/home/delete/{{this.id}}" 
                            class="btn btn-secondary btn-sm flex-grow-1" 
                            style="border-radius: 16px; font-size: 12px;">
                            Delete
                        </a>
                          {{/if}}
                    </div>
                  </a>
                </div>
              </div>
            </div>
            {{/each}}

          </div>
      </div>
    </section>
