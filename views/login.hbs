    {{!-- Form Login --}}
    <div class=" container" style="margin-top: 10rem;">
        <form action="/login" method="post" >
            
                <div class="row text-center">
                    <h1 style="font-weight: bold;">Login</h1>
                </div>

                <div class="row ">
                    <div class="col-5 m-auto ">
                        {{#if messages.success}}
                            <div class='alert alert-success' role='alert'>
                                {{{messages.success}}}
                            </div>
                        {{/if}}
                         {{#if messages.error}}
                            <div class='alert alert-danger' role='alert'>
                                {{messages.error}}
                            </div>
                        {{/if}}

                        {{#if messages.warning}}
                            <div class='alert alert-warning' role='alert'>
                                {{messages.warning}}
                            </div>
                        {{/if}}
                        <label for="email" style="font-weight: bold;" >Email</label>
                        <input type="email" class="form-control mt-2" name="email" id="email" placeholder="Input Your Email">
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-5 m-auto">
                        <label for="password" style="font-weight: bold;">Password</label>
                        <input type="password" class="form-control mt-2" name="password" id="password" placeholder="Input Your Password">
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-4 ms-auto">
                        <button type="submit" class="btn btn-info shadow" style="border-radius: 17px;" >Login</button>
                    </div>
                </div>
            
        </form>
    </div>
