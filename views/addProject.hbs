      <div class=" container">
        <div class="table m-auto" >
          <form action="/addProject" method='POST'>
          
            <div class="row text-center p-3">
                <h1 style="color: #000;">ADD PROJECT</h1>
            </div>
            
            <div class="d-flex row justify-content-center  ">
                <div class="col-lg-8">
                    <label for="project" style="font-size: 18px; font-weight: bold;">Project Name</label>
                    <input type="text" class="form-control" name='title' id="title">     
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col col-lg-4 pt-3 pb-3">
                    <label for="dateStart"  style="font-size: 18px; font-weight: bold; ">Start Date</label>
                    <input type="date" class="form-control" name="dateStart" id="date1"   aria-label="start">
                </div>
                <div class="col col-lg-4 pt-3 pb-3">
                    <label for="dateEnd" style="font-size: 18px; font-weight: bold; ">End Date</label>
                    <input type="date" class="form-control" name="dateEnd" id="date2" aria-label="end">
                </div>
            </div>
            
            <div class="row justify-content-center">
                <div class="col-lg-8 mb-3">
                    <label for="conten" style="font-size: 18px; font-weight: bold; ">Description</label>
                    <textarea class="form-control" rows="4" name="conten" id="conten"></textarea>
                </div>
            </div>
            
            <div class="row text-center" >
                <h5 style="font-weight: bold;">Technologies</h5>
            </div>

              <div class="d-flex row justify-content-center">
                <div class="col col-lg-4 pt-1 pb-3">
                    <input class="form-check-input" type="checkbox" value='fa-brands fa-html5 fa-2x pe-2' name='html' id="defaultCheck1" />
                    <label class="form-check-label" for="defaultCheck1">HTML</label> <br>
                    <input class="form-check-input" type="checkbox" value='fa-brands fa-css3 fa-2x pe-2' name='css' id="defaultCheck1" />
                    <label class="form-check-label" for="defaultCheck1">CSS</label> 
                </div>

                <div class="col col-lg-4 pt-1 pb-3">
                    <input class="form-check-input" type="checkbox" value='fa-brands fa-js-square fa-2x pe-2' name='js' id="defaultCheck1" />
                    <label class="form-check-label" for="defaultCheck1">JAVASCRIPT</label> <br>
                    <input class="form-check-input" type="checkbox" value= 'fa-brands fa-bootstrap fa-2x pe-2' name='bs' id="defaultCheck1" />
                    <label class="form-check-label" for="defaultCheck1">BOOTSTRAP</label> 
                </div>
              </div>
               
            <div class="d-flex row justify-content-center">
                <div class="col-lg-8 pb-3">
                    <label for="image" class="form-label" style="font-weight: bold;" >Upload Image</label>
                    <input class="form-control" type="file" id="image">
                </div>
            </div>
            <div class="d-flex row">
                <div class="col-lg-10 text-end">
                  <button  type="submit" class="btn btn-dark shadow" onclick="addCard()" id="bt" style="border-radius: 18px;">submit</button>
                </div>
            </div>
          
