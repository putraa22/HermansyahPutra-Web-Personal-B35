    {{!-- Form Register --}}
    <div class=" container" style="margin-top: 10rem;">
        <form action="/register" method="post" >
            
                <div class="row text-center">
                    <h1 style="font-weight: bold;">Registrasi</h1>
                </div>
                <div class="row">
                    <div class="col-5 m-auto">
                        <label for="name" style="font-weight: bold;">Name</label>
                        <input type="text" class="form-control mt-2" name="name" id="name" placeholder="Input Your Name">
                    </div>
                </div>
                <div class="row ">
                    <div class="col-5 m-auto mt-3 ">
                        <label for="email" style="font-weight: bold;" >Email</label>
                        <input type="email" class="form-control mt-2" name="email" id="email" placeholder="Input Email">
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-5 m-auto">
                        <label for="password" style="font-weight: bold;">Password</label>
                        <input type="password" class="form-control mt-2" name="password" id="password" placeholder="Input Password">
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-4 ms-auto">
                        <button type="submit" class="btn btn-info shadow" style="border-radius: 17px;" >Daftar</button>
                    </div>
                </div>
            
        </form>
    </div>
    {{!-- Form Register --}}

